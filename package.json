{
  "name": "cdk-lib-starter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "aereal <aereal@aereal.org>",
  "license": "MIT",
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "@aereal/eslint-config/presets/docs-typescript"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "createDefaultProgram": true,
      "project": "./tsconfig.json"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "scripts": {
    "build": "tsc -p .",
    "test": "jest",
    "test:ci": "jest --collectCoverage --coverageDirectory ./coverage",
    "docs": "rm -rf docs/ && typedoc ./src",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "@aws-cdk/core": "^1.89.0"
  },
  "devDependencies": {
    "@aereal/eslint-config": "^0.1.6",
    "@aws-cdk/assert": "^1.89.0",
    "@aws-cdk/cloud-assembly-schema": "^1.89.0",
    "@aws-cdk/core": "^1.89.0",
    "@aws-cdk/cx-api": "^1.89.0",
    "@semantic-release/git": "^9.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.27",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "constructs": "^3.0.24",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.13",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "semantic-release": "^17.4.7",
    "ts-jest": "^26.4.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  },
  "engines": {
    "npm": ">= 7.0.6"
  },
  "release": {
    "branches": [
      {
        "name": "main",
        "prerelease": true,
        "channel": "preview"
      },
      "release"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
